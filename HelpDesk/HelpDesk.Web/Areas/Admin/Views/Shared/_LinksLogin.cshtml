@{
}
@using HelpDesk.Domain.Entities
@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <span class="nav-link text-dark">@User.Identity.Name</span>
        </li>
        <li class="nav-item">
            <form class="form-inline" asp-area="Admin"  asp-action="Logout" asp-controller="Admin">
                <button type="submit" class="nav-link btn btn-link text-dark">
                    Logout
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link light-text" asp-controller="Auth" asp-action="Register">
                Registro
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link light-text" asp-controller="Auth" asp-action="Login">
                Login
            </a>
        </li>
    }
</ul>
